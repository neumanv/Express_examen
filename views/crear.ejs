<%- include("template/cabecera", {tituloWeb: 'Nuevo animal' }) %>
    <div class="container">
        <h2>Añadir nuevo animal</h2>
        <form action="/animales" class="my-2" method="POST">
            <input type="number" placeholder="ID" class="form-control my-2" name="id">
            <input type="text" placeholder="Nombre" class="form-control my-2" name="nombre">
            <input type="text" placeholder="Común" class="form-control my-2" name="comun">
            <input type="text" placeholder="Descripción" class="form-control my-2" name="descripcion">
            <input type="text" placeholder="Tamaño" class="form-control my-2" name="tamano">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
<%- include("template/footer") %>